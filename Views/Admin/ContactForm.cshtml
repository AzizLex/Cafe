@model Cafe.Models.ContactForm;
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1 class="mb-3 text-center">Contact message</h1>
<div class="row">
    <div class="col-12">
        <div class="d-flex">
            <p class="flex-fill"><b>From: </b>@Model.Name<br /><b>Email: </b><a href="mailto:@Model.Email">@Model.Email</a> <br /><b>Phone: </b>@Model.Phone</p>
            <p><b>Sent: </b>@(Model.TimeStamp>DateTime.Today?Model.TimeStamp.ToShortTimeString():Model.TimeStamp.ToShortDateString())</p>
        </div>
        <p style="min-height: 100px"><b>Message: </b>@Model.Comment</p>
    </div>
    <div class="d-flex justify-content-between">
        <a class="btn btn-secondary" asp-action="Contact" asp-route-Id="@TempData["CurrentPage"]">Back</a>
        <a class="btn btn-danger" asp-action="ContactFormDelete" asp-route-Id="@Model.Id" onclick="return confirm('Are you sure you want to delete?')">Delete</a>
    </div>
</div>